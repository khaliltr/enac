{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style-salé.css') }}">
{% endblock %}
{% block title %}Produits{% endblock %}

{% block body %}
    <section class="blog-banner-area" id="category" >
        <div class="container h-100" >
            <div class="blog-banner">
                <div class="text-center">
                    <h1> {{ titre }}</h1>
                    <nav aria-label="breadcrumb" class="banner-breadcrumb">
                    </nav>
                </div>
            </div>
        </div>
    </section>

<!-- ================ category section start ================= -->
<section class="section-margin--small mb-5">
    <div class="container">
        <div class="row">
            <div class="col-xl-3 col-lg-4 col-md-5">
                <div class="sidebar-categories">
                    <div class="head"> Les Catégories</div>
                    <ul class="main-categories">
                        <li class="common-filter">
                            {% for categorie in categories %}
                                <a class="row" href="{{ path('produit_categorie', {'categorie' : categorie.id}) }}">{{ categorie.titre }}</a>
                            {% endfor %}
                        </li>
                    </ul>
                </div>
            </div>

            <div class="col-xl-9 col-lg-8 col-md-7">
                <!-- Start Filter Bar -->
                <div class="filter-bar d-flex flex-wrap align-items-center">

                </div>
                <!-- End Filter Bar -->
                <!-- Start Best Seller -->
                <section class="lattest-product-area pb-40 category-list">
                    <div class="row">

                        {% for produit in produits %}
                            <div class="col-md-6 col-lg-4">
                            <div class="card text-center card-product">
                                <div class="card-product__img">
                                    <img class="card-img" src="{{ asset('img/product/content_minipizza2.jpg') }}" alt="">
                                    <ul class="card-product__imgOverlay">
                                        <li><button><i class="ti-shopping-cart"></i></button></li>

                                    </ul>
                                </div>
                                <div class="card-body">
                                    <h4 class="card-product__title"><a href="">{{ produit.titre }}</a></h4>
                                    <p class="card-product__price">{{ produit.prix }}</p>
                                </div>
                            </div>
                            </div>
                        {% endfor %}
                    </div>
                </section>
                <!-- End Best Seller -->
            </div>
        </div>
    </div>

</section>
{% endblock %}
